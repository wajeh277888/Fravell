<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginTop="@dimen/entry_fields_diff"
            android:text="Where From?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="Eg. Skardu"></EditText>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:text="Where To?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:hint="Eg. Sialkot"></EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:text="Earliest Date?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:ems="10"
            android:hint="Eg. 05/10/2021"
            android:inputType="date" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:text="Latest Date?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:ems="10"
            android:hint="Eg. 15/10/2021"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Please Describe the item"
            android:inputType="textMultiLine"
            android:lines="4" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:text="Additional Notes"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextMultiLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/entry_fields_diff"
            android:layout_marginTop="@dimen/entry_fields_diff"
            android:layout_marginRight="@dimen/entry_fields_diff"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Any Additional Notes?"
            android:inputType="textMultiLine"
            android:lines="3" />


        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/main"
            android:text="Submit" />


    </LinearLayout>

</RelativeLayout>